{
  "name": "@emeraldwallet/core",
  "version": "2.11.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@emeraldpay/bigamount": "^0.4.2",
    "@emeraldpay/bigamount-crypto": "^0.4.2",
    "@emeraldpay/emerald-vault-core": "^0.14.0-dev",
    "@ethereumjs/common": "^3.1.2",
    "@ethereumjs/tx": "^4.1.2",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bignumber": "^5.7.0",
    "bignumber.js": "8.0.2",
    "bitcoinjs-lib": "^6.1.0",
    "ethereumjs-util": "^7.1.5",
    "jsonschema": "^1.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "jest": "^29.6.2",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "transform": {
      ".+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": false
        }
      ]
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
