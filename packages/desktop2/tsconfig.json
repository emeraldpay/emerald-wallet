{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./app",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "target": "ES5"
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "references": [
    {
      "path": "../electron-app"
    },
    {
      "path": "../react-app"
    }
  ]
}
