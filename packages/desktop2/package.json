{
  "name": "@emeraldwallet/desktop2",
  "productName": "EmeraldWallet",
  "version": "2.6.0-dev",
  "description": "Emerald - Cryptocurrency Wallet",
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "ethereum",
    "ethereum classic",
    "wallet"
  ],
  "contributors": [
    "Igor Artamonov <splix@emerald.cash>"
  ],
  "author": {
    "name": "Igor Artamonov",
    "email": "splix@emerald.cash"
  },
  "homepage": "https://emerald.cash",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emeraldpay/emerald-wallet.git"
  },
  "bugs": {
    "url": "https://github.com/emeraldpay/emerald-wallet/issues"
  },
  "main": "./app/main.js",
  "scripts": {
    "clean": "rimraf ./app/",
    "compile": "tsc -b",
    "build": "yarn clean && yarn compile && webpack",
    "start": "electron ./app/main.js",
    "dist": "rimraf ./dist/ && electron-builder --publish never"
  },
  "dependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^10.2.4",
    "cross-env": "^7.0.3",
    "electron": "15.3.5",
    "electron-builder": "^22.14.13",
    "html-webpack-plugin": "^5.5.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.7",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "build": {
    "appId": "io.emeraldwallet.desktop",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      {
        "from": "app",
        "to": ".",
        "filter": ["**/*"]
      },
      "package.json"
    ],
    "asar": true,
    "compression": "normal",
    "dmg": {
      "iconSize": 128,
      "contents": [
        {
          "x": 180,
          "y": 190
        },
        {
          "x": 380,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "nsis": {
      "oneClick": false
    },
    "win": {
      "icon": "resources/icon.ico"
    }
  }
}
