{
  "name": "@emeraldwallet/desktop2",
  "productName": "EmeraldWallet",
  "contributors": [
    "Igor Artamonov <splix@emerald.cash>",
    "Yuriy Gagarin <gagarin55@protonmail.com>"
  ],
  "version": "2.6.0-dev",
  "description": "Emerald - Cryptocurrency Wallet",
  "keywords": [
    "ethereum",
    "ethereum classic",
    "wallet",
    "cryptocurrency",
    "blockchain"
  ],
  "author": "gagarin55 <gagarin55@protonmail.com>",
  "homepage": "https://emerald.cash",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emeraldpay/emerald-wallet.git"
  },
  "scripts": {
    "clean": "rimraf app/",
    "compile": "tsc -b",
    "start": "yarn build && electron ./app/electron.js",
    "build": "yarn clean && yarn compile && webpack --config webpack.config.js",
    "dist": "rimraf dist/ && electron-builder --publish never"
  },
  "bugs": {
    "url": "https://github.com/emeraldpay/emerald-wallet/issues"
  },
  "main": "electron.js",
  "devDependencies": {
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "7.0.2",
    "electron": "15.3.5",
    "electron-builder": "22.8.1",
    "html-webpack-plugin": "^4.0.4",
    "rimraf": "2.6.3",
    "ts-loader": "^6.2.2",
    "webpack": "4.41.2",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "@emeraldwallet/electron-app": "^2.6.0-dev",
    "@emeraldwallet/react-app": "^2.6.0-dev",
    "@grpc/grpc-js": "^1.5.1",
    "react": "16.11.0",
    "react-dom": "16.11.0"
  },
  "build": {
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      {
        "from": "app",
        "to": ".",
        "filter": [
          "**/*"
        ]
      },
      "package.json"
    ],
    "appId": "io.emeraldwallet.desktop",
    "compression": "normal",
    "asar": true,
    "extraResources": [],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ]
    },
    "win": {
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false
    },
    "dmg": {
      "iconSize": 128,
      "contents": [
        {
          "x": 180,
          "y": 190
        },
        {
          "x": 380,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
