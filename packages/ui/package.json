{
  "name": "@emeraldwallet/ui",
  "version": "2.12.0-dev",
  "description": "UI components for Emerald Wallet",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "storybook:build": "storybook dev -p 9001 -c .storybook",
    "test": "jest --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage"
  },
  "dependencies": {
    "@emeraldpay/bigamount": "^0.4.2",
    "@emeraldpay/bigamount-crypto": "^0.4.2",
    "@emeraldpay/hashicon": "0.5.1",
    "@emeraldwallet/core": "2.12.0-dev",
    "@fontsource/inter": "^5.0.13",
    "@fontsource/roboto-mono": "^5.0.13",
    "@mui/icons-material": "5.17.1",
    "@mui/lab": "^5.0.0-alpha.176",
    "@mui/material": "^5.17.1",
    "@mui/styles": "^5.17.1",
    "@mui/system": "^5.17.1",
    "bignumber.js": "8.0.2",
    "classnames": "^2.3.2",
    "qrcode.react": "^4.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^14.3.8",
    "sortablejs": "^1.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@storybook/addon-actions": "8.6.9",
    "@storybook/cli": "^8.6.9",
    "@storybook/react": "8.6.9",
    "@storybook/react-webpack5": "8.6.9",
    "@testing-library/react": "16.2.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/qrcode.react": "^1.0.2",
    "@types/redux": "^3.6.0",
    "@types/sortablejs": "^1.15.1",
    "babel-loader": "^9.1.3",
    "copyfiles": "^2.4.1",
    "dotenv-webpack": "^8.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.2",
    "jest-canvas-mock": "^2.5.2",
    "jest-transform-stub": "^2.0.0",
    "readable-stream": "^4.5.2",
    "require-from-string": "^2.0.2",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.2",
    "webpack": "5.91.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "^@fontsource/.+$": "identity-obj-proxy"
    },
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  }
}
