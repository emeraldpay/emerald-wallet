{
  "name": "@emeraldwallet/ui",
  "version": "2.9.0-dev",
  "description": "UI components for Emerald Wallet",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage && codecov"
  },
  "dependencies": {
    "@emeraldpay/bigamount": "^0.4.1",
    "@emeraldpay/bigamount-crypto": "^0.4.1",
    "@emeraldpay/hashicon": "0.5.1",
    "@emeraldwallet/core": "^2.9.0-dev",
    "@emeraldwallet/erc20": "^2.9.0-dev",
    "@material-ui/core": "4.12.4",
    "@material-ui/icons": "4.11.3",
    "@material-ui/lab": "4.0.0-alpha.61",
    "@material-ui/styles": "4.11.5",
    "bignumber.js": "8.0.2",
    "classnames": "^2.3.2",
    "qrcode.react": "^3.1.0",
    "react": "^16.14.0",
    "react-autosuggest": "^10.1.0",
    "react-dom": "^16.14.0",
    "react-dropzone": "^14.2.3",
    "sortablejs": "^1.15.0",
    "typeface-inter": "^3.18.1",
    "typeface-roboto-mono": "^1.1.13"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/builder-webpack5": "^6.5.13",
    "@storybook/manager-webpack5": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@testing-library/react": "9.5.0",
    "@types/cheerio": "^0.22.31",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^27.5.2",
    "@types/node": "^18.11.5",
    "@types/qrcode.react": "^1.0.2",
    "@types/react-autosuggest": "^10.1.5",
    "@types/sortablejs": "^1.15.0",
    "@types/webpack-env": "^1.18.0",
    "babel-loader": "^8.2.5",
    "copyfiles": "^2.4.1",
    "dotenv-webpack": "^8.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-canvas-mock": "^2.4.0",
    "jest-transform-stub": "^2.0.0",
    "require-from-string": "^2.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.5",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "moduleNameMapper": {
      "typeface-.*$": "identity-obj-proxy"
    }
  }
}
