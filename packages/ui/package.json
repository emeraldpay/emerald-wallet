{
  "name": "@emeraldwallet/ui",
  "version": "2.6.0-dev",
  "description": "UI components for Emerald Wallet",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "ETCDEV GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf lib/ && rimraf tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "build:dist": "yarn clean && yarn compile && yarn copyfiles -u 1 src/**/*.png lib/",
    "build": "yarn clean && yarn compile && yarn copyfiles -u 1 src/**/*.png lib/",
    "test": "jest --no-cache --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage && codecov",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "dependencies": {
    "@emeraldpay/bigamount": "^0.3.0",
    "@emeraldpay/bigamount-crypto": "^0.3.0",
    "@emeraldpay/hashicon": "^0.5.1",
    "@emeraldplatform/core": "^0.5.11",
    "@emeraldplatform/eth": "^0.5.10",
    "@emeraldplatform/ui": "0.6.0",
    "@emeraldplatform/ui-icons": "0.6.0",
    "@emeraldwallet/core": "^2.6.0-dev",
    "@emeraldwallet/erc20": "^2.6.0-dev",
    "@material-ui/core": "4.9.10",
    "@material-ui/icons": "4.9.1",
    "@material-ui/lab": "4.0.0-alpha.49",
    "@material-ui/styles": "4.9.10",
    "bignumber.js": "8.0.2",
    "classnames": "2.2.6",
    "clipboard-polyfill": "^3.0.1",
    "qrcode.react": "^1.0.0",
    "react": "^16.13.1",
    "react-autosuggest": "^9.4.3",
    "react-dom": "^16.13.1",
    "react-dropzone": "^11.0.1",
    "react-sortablejs": "^6.0.3",
    "sortablejs": "^1.14.0",
    "typeface-inter": "^3.12.0",
    "typeface-roboto-mono": "^0.0.75"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@storybook/addon-actions": "^6.4.18",
    "@storybook/react": "^6.4.18",
    "@testing-library/react": "9.1.4",
    "@types/enzyme": "^3.9.0",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^27.4.0",
    "@types/node": "16.11.22",
    "@types/qrcode.react": "^1.0.0",
    "@types/react-autosuggest": "^9.3.7",
    "@types/sortablejs": "^1.10.7",
    "@types/webpack-env": "^1.16.3",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "copyfiles": "^2.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.0",
    "jest-canvas-mock": "^2.0.0-beta.1",
    "jest-transform-stub": "^2.0.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^27.1.3",
    "ts-loader": "^7.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "moduleNameMapper": {
      "typeface-.*$": "identity-obj-proxy"
    }
  }
}
