{
  "name": "@emeraldwallet/ui",
  "version": "2.11.0-dev",
  "description": "UI components for Emerald Wallet",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage"
  },
  "dependencies": {
    "@emeraldpay/bigamount": "^0.4.1",
    "@emeraldpay/bigamount-crypto": "^0.4.1",
    "@emeraldpay/hashicon": "0.5.1",
    "@emeraldwallet/core": "2.11.0-dev",
    "@fontsource/inter": "^5.0.8",
    "@fontsource/roboto-mono": "^5.0.8",
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "4.11.3",
    "@material-ui/lab": "^4.0.0-alpha.61",
    "@material-ui/styles": "^4.11.5",
    "bignumber.js": "8.0.2",
    "classnames": "^2.3.2",
    "qrcode.react": "^3.1.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-dropzone": "^14.2.3",
    "sortablejs": "^1.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@storybook/addon-actions": "6.5.16",
    "@storybook/builder-webpack5": "6.5.16",
    "@storybook/manager-webpack5": "6.5.16",
    "@storybook/react": "6.5.16",
    "@testing-library/react": "12.1.5",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/qrcode.react": "^1.0.2",
    "@types/redux": "^3.6.0",
    "@types/sortablejs": "^1.15.1",
    "babel-loader": "^9.1.3",
    "copyfiles": "^2.4.1",
    "dotenv-webpack": "^8.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.2",
    "jest-canvas-mock": "^2.5.2",
    "jest-transform-stub": "^2.0.0",
    "require-from-string": "^2.0.2",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "5.74.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "^@fontsource/.+$": "identity-obj-proxy"
    },
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  }
}
