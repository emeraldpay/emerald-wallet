{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "outDir": "lib/",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src/",
    "sourceMap": true,
    "strict": false,
    "target": "ES6",
    "typeRoots": [
      "../../node_modules/@types",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}
