{
  "compilerOptions": {
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "declaration": true,
    "strict": false,
    "jsx": "react",
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "../../node_modules",
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    { "path": "../core" }
  ]
}
