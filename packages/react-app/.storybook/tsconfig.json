{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../src",
    "composite": false,
    "jsx": "react",
    "resolveJsonModule": true,
    "rootDirs": [
      "../src",
      "../stories"
    ],
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "exclude": [
    "../../node_modules",
    "../src/**/*.spec.ts",
    "../src/**/*.spec.tsx"
  ],
  "include": [
    "../src/**/*.ts",
    "../src/**/*.tsx",
  ]
}
