{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "resolveJsonModule": true,
    "rootDirs": [
      "src",
      "stories"
    ],
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "exclude": [
    "../../node_modules",
    "../src/**/*.spec.ts",
    "../src/**/*.spec.tsx",
    "node_modules"
  ],
  "include": [
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "../stories/**/*.tsx"
  ]
}
