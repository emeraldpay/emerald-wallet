{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "lib/",
    "resolveJsonModule": true,
    "rootDir": "src/",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/i18n/locales/**/*.json"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../store"
    },
    {
      "path": "../ui"
    }
  ]
}
