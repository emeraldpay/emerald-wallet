{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "jsx": "react",
    "outDir": "lib/",
    "resolveJsonModule": true,
    "rootDir": "src/"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/i18n/locales/**/*.json"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../store"
    },
    {
      "path": "../ui"
    }
  ]
}
