{
  "name": "@emeraldwallet/react-app",
  "version": "2.7.0-dev",
  "description": "Emerald Wallet React Application",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile && yarn copyfiles -u 1 src/**/*.png lib/",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "storybook": "start-storybook -p 9001 -c .storybook --ci",
    "storybook:electron": "electron stories/electron_index.js",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --passWithNoTests --coverage && codecov"
  },
  "dependencies": {
    "@emeraldpay/bigamount": "^0.4.0",
    "@emeraldpay/bigamount-crypto": "^0.4.0",
    "@emeraldpay/emerald-vault-core": "^0.9.0-dev",
    "@emeraldwallet/core": "^2.7.0-dev",
    "@emeraldwallet/erc20": "^2.7.0-dev",
    "@emeraldwallet/store": "^2.7.0-dev",
    "@emeraldwallet/ui": "^2.7.0-dev",
    "@material-ui/core": "4.9.10",
    "@material-ui/icons": "4.9.1",
    "@material-ui/lab": "4.0.0-alpha.49",
    "bip39": "3.0.2",
    "bitcoin-address-validation": "^1.0.2",
    "bitcoinjs-lib": "^5.2.0",
    "classnames": "^2.3.1",
    "i18next": "19.3.2",
    "i18next-browser-languagedetector": "4.0.2",
    "qrcode": "^1.4.4",
    "qrcode.react": "^1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-dropzone": "^6",
    "react-i18next": "11.3.3",
    "react-qrcode": "^0.2.5",
    "react-redux": "^7.1.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@storybook/addon-actions": "6.3.13",
    "@storybook/react": "6.3.13",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.4",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^27.4.0",
    "@types/node": "16.11.22",
    "@types/qrcode": "^1.3.4",
    "@types/qrcode.react": "^1.0.0",
    "@types/react-redux": "^7.1.1",
    "@types/uuid": "^3.4.4",
    "awesome-typescript-loader": "^5.2.1",
    "copyfiles": "2.1.0",
    "electron-devtools-installer": "^3.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.0",
    "jest-canvas-mock": "^2.1.1",
    "jest-environment-jsdom": "^27.5.1",
    "jest-transform-stub": "^2.0.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^27.1.3"
  },
  "jest": {
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "moduleNameMapper": {
      "typeface-.*$": "identity-obj-proxy"
    },
    "preset": "ts-jest",
    "testEnvironment": "<rootDir>/jest.env.js",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "downlevelIteration": true
        },
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  }
}
