{
  "name": "@emeraldwallet/react-app",
  "version": "2.12.0",
  "description": "Emerald Wallet React Application",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile && yarn resources",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "resources": "copyfiles -u 1 src/**/*.png lib/",
    "storybook:build": "storybook dev -p 9001 -c .storybook --ci",
    "storybook:electron": "electron stories/electron_index.js",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@emeraldpay/bigamount": "^0.4.2",
    "@emeraldpay/bigamount-crypto": "^0.4.2",
    "@emeraldpay/emerald-vault-core": "^0.14.0",
    "@emeraldwallet/core": "2.12.0",
    "@emeraldwallet/store": "2.12.0",
    "@emeraldwallet/ui": "2.12.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@ethersproject/hash": "^5.8.0",
    "@ethersproject/transactions": "^5.8.0",
    "@mui/icons-material": "^5.17.1",
    "@mui/lab": "^5.0.0-alpha.176",
    "@mui/material": "^5.17.1",
    "bignumber.js": "8.0.2",
    "bip39": "^3.1.0",
    "bitcoin-address-validation": "^2.2.3",
    "bitcoinjs-lib": "^6.1.7",
    "classnames": "^2.5.1",
    "i18next": "^20.6.1",
    "i18next-browser-languagedetector": "6.1.8",
    "luxon": "^3.6.0",
    "qrcode": "^1.5.4",
    "qrcode.react": "^3.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^14.3.8",
    "react-i18next": "^15.4.1",
    "react-qrcode": "^0.3.6",
    "react-redux": "^8.1.3",
    "react-sortablejs": "^6.1.4",
    "react-virtualized": "^9.22.6",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2",
    "sortablejs": "^1.15.6",
    "tss-react": "^4.9.15"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/plugin-transform-optional-chaining": "^7.25.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@storybook/addon-actions": "8.6.9",
    "@storybook/cli": "^8.6.9",
    "@storybook/react": "^8.6.9",
    "@storybook/react-webpack5": "^8.6.9",
    "@storybook/types": "^8.6.9",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "12.1.5",
    "@types/enzyme": "^3.10.18",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.3.1",
    "@types/node": "^20.17.27",
    "@types/qrcode": "^1.5.5",
    "@types/qrcode.react": "^1.0.5",
    "@types/react": "^17.0.84",
    "@types/react-virtualized": "^9.22.2",
    "@types/sortablejs": "^1.15.8",
    "@types/webpack-env": "^1.18.5",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.8.0",
    "copyfiles": "^2.4.1",
    "dotenv-webpack": "^8.0.1",
    "electron": "22.3.27",
    "electron-devtools-installer": "^3.2.1",
    "enzyme": "^3.11.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "require-from-string": "^2.0.2",
    "rimraf": "^5.0.1",
    "storybook": "8.6.9",
    "ts-jest": "^29.3.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "webpack": "5.98.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "<rootDir>/jest.env.js",
    "testPathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "^@fontsource/.+$": "identity-obj-proxy"
    },
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      ".+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": {
            "warnOnly": true
          },
          "tsconfig": {
            "downlevelIteration": true
          }
        }
      ]
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  }
}
