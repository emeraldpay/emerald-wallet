{
  "name": "@emeraldwallet/react-app",
  "version": "2.8.0-dev",
  "description": "Emerald Wallet React Application",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile && yarn resources",
    "build:native": "cd $PROJECT_CWD/node_modules/@emeraldpay/emerald-vault-native && yarn build:rs",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "resources": "copyfiles -u 1 src/**/*.png lib/",
    "storybook": "start-storybook -p 9001 -c .storybook --ci",
    "storybook:electron": "electron stories/electron_index.js",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --passWithNoTests --coverage && codecov"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@emeraldpay/bigamount": "^0.4.1",
    "@emeraldpay/bigamount-crypto": "^0.4.1",
    "@emeraldpay/emerald-vault-core": "^0.9.0",
    "@emeraldwallet/core": "^2.8.0-dev",
    "@emeraldwallet/erc20": "^2.8.0-dev",
    "@emeraldwallet/store": "^2.8.0-dev",
    "@emeraldwallet/ui": "^2.8.0-dev",
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "^4.11.3",
    "@material-ui/lab": "^4.0.0-alpha.61",
    "bip39": "^3.0.4",
    "bitcoin-address-validation": "^1.0.2",
    "bitcoinjs-lib": "^6.0.2",
    "classnames": "^2.3.2",
    "i18next": "^20.6.1",
    "i18next-browser-languagedetector": "^5.0.1",
    "luxon": "^3.0.4",
    "qrcode": "^1.5.1",
    "qrcode.react": "^3.1.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-dropzone": "^14.2.3",
    "react-i18next": "^12.0.0",
    "react-qrcode": "^0.3.6",
    "react-redux": "^7.2.9",
    "react-sortablejs": "^6.1.4",
    "react-virtualized": "^9.22.3",
    "redux": "^4.2.0",
    "redux-thunk": "^2.4.1",
    "sortablejs": "^1.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/builder-webpack5": "^6.5.13",
    "@storybook/manager-webpack5": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^27.5.2",
    "@types/luxon": "^3.0.2",
    "@types/node": "^18.11.5",
    "@types/qrcode": "^1.5.0",
    "@types/qrcode.react": "^1.0.2",
    "@types/react-redux": "^7.1.24",
    "@types/react-virtualized": "9.21.20",
    "@types/sortablejs": "^1.15.0",
    "copyfiles": "^2.4.1",
    "dotenv-webpack": "^8.0.1",
    "electron": "^21.2.0",
    "electron-devtools-installer": "^3.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-canvas-mock": "^2.4.0",
    "jest-environment-jsdom": "^27.5.1",
    "jest-transform-stub": "^2.0.0",
    "require-from-string": "^2.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.5",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0"
  },
  "jest": {
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "moduleNameMapper": {
      "typeface-.*$": "identity-obj-proxy"
    },
    "preset": "ts-jest",
    "testEnvironment": "<rootDir>/jest.env.js",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "downlevelIteration": true
        },
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  }
}
