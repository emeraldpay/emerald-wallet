{
  "name": "@emeraldwallet/react-app",
  "version": "2.10.0-dev",
  "description": "Emerald Wallet React Application",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile && yarn resources",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "resources": "copyfiles -u 1 src/**/*.png lib/",
    "storybook": "start-storybook -p 9001 -c .storybook --ci",
    "storybook:electron": "electron stories/electron_index.js",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "@emeraldpay/bigamount": "^0.4.1",
    "@emeraldpay/bigamount-crypto": "^0.4.1",
    "@emeraldpay/emerald-vault-core": "^0.11.0",
    "@emeraldwallet/core": "2.10.0-dev",
    "@emeraldwallet/store": "2.10.0-dev",
    "@emeraldwallet/ui": "2.10.0-dev",
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "^4.11.3",
    "@material-ui/lab": "^4.0.0-alpha.61",
    "bip39": "^3.1.0",
    "bitcoin-address-validation": "^2.2.1",
    "bitcoinjs-lib": "^6.1.0",
    "classnames": "^2.3.2",
    "i18next": "^20.6.1",
    "i18next-browser-languagedetector": "6.1.2",
    "luxon": "^3.3.0",
    "qrcode": "^1.5.3",
    "qrcode.react": "^3.1.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-dropzone": "^14.2.3",
    "react-i18next": "^12.2.2",
    "react-qrcode": "^0.3.6",
    "react-redux": "^7.2.9",
    "react-sortablejs": "^6.1.4",
    "react-virtualized": "^9.22.5",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2",
    "sortablejs": "^1.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^10.4.9",
    "@types/enzyme": "^3.10.13",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^29.5.1",
    "@types/luxon": "^3.3.0",
    "@types/node": "^20.1.5",
    "@types/qrcode": "^1.5.0",
    "@types/qrcode.react": "^1.0.2",
    "@types/react-redux": "^7.1.25",
    "@types/react-virtualized": "^9.21.21",
    "@types/sortablejs": "^1.15.1",
    "copyfiles": "^2.4.1",
    "dotenv-webpack": "^8.0.1",
    "electron": "22.3.9",
    "electron-devtools-installer": "^3.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-canvas-mock": "^2.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-transform-stub": "^2.0.0",
    "require-from-string": "^2.0.2",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "webpack": "5.74.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "<rootDir>/jest.env.js",
    "testPathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "typeface-.*$": "identity-obj-proxy"
    },
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      ".+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": {
            "warnOnly": true
          },
          "tsconfig": {
            "downlevelIteration": true
          }
        }
      ]
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  }
}
