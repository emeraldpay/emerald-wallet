{
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}
