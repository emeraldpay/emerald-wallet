{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "lib/",
    "rootDir": "src/",
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../store"
    }
  ]
}
