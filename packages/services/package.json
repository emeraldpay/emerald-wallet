{
  "name": "@emeraldwallet/services",
  "version": "2.7.0-dev",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "ETCDEV GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests && codecov"
  },
  "dependencies": {
    "@emeraldpay/api": "0.3.0-alpha.2",
    "@emeraldpay/api-node": "0.3.0-alpha.2",
    "@emeraldpay/bigamount": "^0.4.0",
    "@emeraldpay/bigamount-crypto": "^0.4.0",
    "@emeraldplatform/eth-rpc": "0.5.1",
    "@emeraldplatform/rpc": "0.5.1",
    "@emeraldwallet/core": "^2.7.0-dev",
    "@emeraldwallet/store": "^2.7.0-dev",
    "@grpc/grpc-js": "^1.5.1",
    "google-protobuf": "^3.10.0",
    "text-encoding": "0.7.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "16.11.22",
    "@types/text-encoding": "0.0.35",
    "jest": "^27.5.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^27.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
