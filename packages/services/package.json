{
  "name": "@emeraldwallet/services",
  "version": "2.5.0-dev",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "ETCDEV GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf lib/ && rimraf tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "build": "yarn clean && yarn compile",
    "build:dist": "yarn clean && yarn compile",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests && codecov"
  },
  "dependencies": {
    "@emeraldpay/api": "0.2.0-beta.2",
    "@emeraldpay/api-node": "0.2.0-beta.2",
    "@emeraldpay/bigamount": "^0.2.0",
    "@emeraldpay/bigamount-crypto": "^0.2.0",
    "@emeraldplatform/eth-rpc": "0.5.1",
    "@emeraldplatform/rpc": "0.5.1",
    "@emeraldwallet/core": "^2.5.0-dev",
    "@emeraldwallet/store": "^2.5.0-dev",
    "google-protobuf": "3.7.1",
    "grpc": "^1.24.3",
    "text-encoding": "0.7.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "@types/node": "^12.12.0",
    "@types/text-encoding": "0.0.35",
    "jest": "^24.1.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
