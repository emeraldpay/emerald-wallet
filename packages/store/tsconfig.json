{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "lib/",
    "rootDir": "src/",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "typeRoots": [
      "./typings",
      "node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../erc20"
    },
    {
      "path": "../history-store"
    }
  ]
}
