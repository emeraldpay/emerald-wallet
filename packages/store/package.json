{
  "name": "@emeraldwallet/store",
  "version": "2.12.0",
  "description": "Emerald Redux store",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@emeraldpay/bigamount": "^0.4.2",
    "@emeraldpay/bigamount-crypto": "^0.4.2",
    "@emeraldpay/emerald-vault-core": "^0.14.0",
    "@emeraldwallet/core": "2.12.0",
    "bignumber.js": "8.0.2",
    "color-hash": "^2.0.2",
    "immer": "^9.0.21",
    "redux": "^4.2.1",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.3.0",
    "redux-thunk": "^2.4.2",
    "reselect": "^4.1.8",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/color-hash": "^1.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.27",
    "@types/redux-logger": "^3.0.13",
    "electron": "22.3.27",
    "jest": "^29.7.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts",
      "<rootDir>/src/__mocks__/localStorageMock.ts"
    ],
    "moduleNameMapper": {
      "electron": "<rootDir>/src/__mocks__/electronMock.ts"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
