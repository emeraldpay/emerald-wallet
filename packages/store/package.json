{
  "name": "@emeraldwallet/store",
  "version": "2.9.0-dev",
  "description": "Emerald Redux store",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "test": "jest",
    "test:coverage": "jest --coverage && codecov"
  },
  "dependencies": {
    "@emeraldpay/bigamount": "^0.4.1",
    "@emeraldpay/bigamount-crypto": "^0.4.1",
    "@emeraldpay/emerald-vault-core": "^0.10.0",
    "@emeraldwallet/core": "^2.9.0-dev",
    "bignumber.js": "8.0.2",
    "color-hash": "^2.0.1",
    "immer": "^9.0.16",
    "lodash": "^4.17.21",
    "redux": "^4.2.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.2.1",
    "redux-thunk": "^2.4.1",
    "reselect": "^4.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/color-hash": "^1.0.2",
    "@types/jest": "^27.5.2",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.11.5",
    "@types/redux-logger": "^3.0.9",
    "@types/uuid": "^8.3.4",
    "electron": "21.2.2",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.5",
    "typescript": "^4.8.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts",
      "<rootDir>/src/__mocks__/localStorageMock.ts"
    ],
    "moduleNameMapper": {
      "electron": "<rootDir>/src/__mocks__/electronMock.ts"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
