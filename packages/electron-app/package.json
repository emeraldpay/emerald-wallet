{
  "name": "@emeraldwallet/electron-app",
  "version": "2.8.0-dev",
  "description": "Emerald Wallet Electron Shell",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:native": "cd $PROJECT_CWD/node_modules/@emeraldpay/emerald-vault-native && yarn build:rs",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --passWithNoTests --coverage && codecov"
  },
  "dependencies": {
    "@emeraldpay/emerald-vault-core": "^0.9.0",
    "@emeraldpay/emerald-vault-native": "^0.9.0",
    "@emeraldwallet/core": "^2.8.0-dev",
    "@emeraldwallet/erc20": "^2.8.0-dev",
    "@emeraldwallet/services": "^2.8.0-dev",
    "@emeraldwallet/store": "^2.8.0-dev",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^18.11.5",
    "@types/uuid": "^3.4.10",
    "electron": "^21.2.0",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.5",
    "typescript": "^4.8.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
