{
  "name": "@emeraldwallet/electron-app",
  "version": "2.10.0",
  "description": "Emerald Wallet Electron Shell",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:native": "cd $PROJECT_CWD/node_modules/@emeraldpay/emerald-vault-native && yarn build:rs",
    "build:native:speculos": "cd $PROJECT_CWD/node_modules/@emeraldpay/emerald-vault-native && yarn build:rs:hwkeyemulate",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b"
  },
  "dependencies": {
    "@emeraldpay/emerald-vault-core": "^0.12.0",
    "@emeraldpay/emerald-vault-native": "^0.12.0",
    "@emeraldwallet/core": "2.10.0",
    "@emeraldwallet/persistent-state": "2.10.0",
    "@emeraldwallet/services": "2.10.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/uuid": "^9.0.2",
    "electron": "22.3.9",
    "jest": "^29.6.2",
    "neon-cli": "^0.10.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "transform": {
      ".+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": {
            "warnOnly": true
          }
        }
      ]
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
