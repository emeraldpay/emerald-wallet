{
  "name": "@emeraldwallet/electron-app",
  "version": "2.9.2",
  "description": "Emerald Wallet Electron Shell",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:native": "cd $PROJECT_CWD/node_modules/@emeraldpay/emerald-vault-native && yarn build:rs",
    "build:native:speculos": "cd $PROJECT_CWD/node_modules/@emeraldpay/emerald-vault-native && yarn build:rs:hwkeyemulate",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b"
  },
  "dependencies": {
    "@emeraldpay/emerald-vault-core": "^0.11.1",
    "@emeraldpay/emerald-vault-native": "^0.11.1",
    "@emeraldwallet/core": "^2.9.2",
    "@emeraldwallet/persistent-state": "^2.9.2",
    "@emeraldwallet/services": "^2.9.2",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^18.11.5",
    "@types/uuid": "^3.4.10",
    "electron": "21.2.2",
    "jest": "^27.5.1",
    "neon-cli": "^0.10.1",
    "rimraf": "^4.1.2",
    "ts-jest": "^27.1.5",
    "typescript": "^4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
