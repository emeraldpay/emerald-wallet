{
  "name": "@emeraldwallet/persistent-state",
  "version": "2.12.0-dev",
  "main": "lib/index.js",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:native": "cargo-cp-artifact -nc index.node -- cargo build --manifest-path native/Cargo.toml --message-format=json-render-diagnostics --release",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@emeraldpay/emerald-vault-core": "^0.13.0-dev",
    "@emeraldpay/neon-frame": "^0.1.1",
    "@emeraldwallet/core": "2.12.0-dev"
  },
  "devDependencies": {
    "cargo-cp-artifact": "^0.1.8",
    "jest": "^29.6.2",
    "jest-runner": "^29.6.2",
    "jest-serial-runner": "^1.2.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib",
      "<rootDir>/src/__tests__/_commons.ts"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "transform": {
      ".+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": false
        }
      ]
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
