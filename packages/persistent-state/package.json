{
  "name": "@emeraldwallet/persistent-state",
  "version": "2.9.0-dev",
  "description": "",
  "main": "lib/index.js",
  "author": "Emerald Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:native": "cargo-cp-artifact -nc index.node -- cargo build --manifest-path native/Cargo.toml --message-format=json-render-diagnostics --release",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@emeraldpay/emerald-vault-core": "^0.10.0",
    "@emeraldpay/neon-frame": "^0.1.1",
    "@emeraldwallet/core": "^2.9.0-dev"
  },
  "devDependencies": {
    "cargo-cp-artifact": "^0.1.6",
    "jest": "^27.5.1",
    "jest-runner": "^27.5.1",
    "jest-serial-runner": "^1.2.0",
    "rimraf": "^4.1.2",
    "ts-jest": "^27.1.5",
    "typescript": "^4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib",
      "<rootDir>/src/__tests__/_commons.ts"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
