{
  "name": "@emeraldwallet/history-store",
  "version": "2.4.0-alpha.0",
  "description": "Transactions storage management",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "ETCDEV GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "build": "yarn clean && yarn compile",
    "build:dist": "yarn clean && yarn compile",
    "test": "jest",
    "test:coverage": "jest --coverage && codecov"
  },
  "dependencies": {
    "@emeraldplatform/core": "0.5.8",
    "@emeraldwallet/core": "^2.4.0-alpha.0",
    "bignumber.js": "8.0.2",
    "electron-store": "5.1.0"
  },
  "devDependencies": {
    "@jest-runner/electron": "^2.0.3",
    "@types/jest": "^24.0.9",
    "@types/node": "12.12.62",
    "electron": "7.3.3",
    "jest": "^24.1.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "runner": "@jest-runner/electron/main",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts",
      "<rootDir>/__mocks__/localStorageMock.js"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
