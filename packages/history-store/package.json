{
  "name": "@emeraldwallet/history-store",
  "version": "2.6.0-dev",
  "description": "Transactions storage management",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "ETCDEV GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "build": "yarn clean && yarn compile",
    "build:dist": "yarn clean && yarn compile",
    "test": "jest",
    "test:coverage": "jest --coverage && codecov"
  },
  "dependencies": {
    "@emeraldplatform/core": "0.5.8",
    "@emeraldwallet/core": "^2.6.0-dev",
    "bignumber.js": "8.0.2",
    "electron-store": "5.1.0"
  },
  "devDependencies": {
    "@kayahr/jest-electron-runner": "^4.2.0",
    "@types/jest": "^27.4.0",
    "@types/node": "16.11.22",
    "electron": "15.3.5",
    "jest": "^27.5.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^27.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "runner": "@kayahr/jest-electron-runner/main",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts",
      "<rootDir>/__mocks__/localStorageMock.js"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
