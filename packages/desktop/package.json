		"url-loader": "^1.1.2",
		"usb": "1.5.0",
		"webpack": "4.29.5"
	},
	"build": {
		"appId": "com.ethereumclassic.emeraldwallet",
		"artifactName": "${productName}-${os}-${arch}-${env.APP_VERSION_GIT_TAG}.${ext}",
		"compression": "normal",
		"asar": true,
		"extraResources": [
			"./emerald",
			"./emerald.exe"
		],
		"mac": {
			"category": "public.app-category.developer-tools"
		},
		"linux": {
			"target": [
				"AppImage",
				"deb",
				"tar.gz"
			]
		},
		"win": {
			"icon": "build/icon.ico"
		},
		"nsis": {
			"oneClick": false
		},
		"dmg": {
			"iconSize": 128,
			"contents": [
				{
					"x": 180,
					"y": 190
				},
				{
					"x": 380,
					"y": 190,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"protocols": [
			{
				"name": "ethereum",
				"schemes": [
					"ethereum"
				]
			}
		]
	},
	"jest": {
		"testURL": "http://localhost",
		"coverageDirectory": "./coverage/",
		"collectCoverageFrom": [
			"src/**/*.js"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
			"\\.(scss|less)$": "identity-obj-proxy",
			"electron": "<rootDir>/src/__mocks__/electron-mock.js"
		},
		"modulePaths": [
			"<rootDir>/src/"
		],
		"setupFiles": [
			"<rootDir>/src/__mocks__/localStorageMock.js",
			"<rootDir>/src/__mocks__/node-fetch.js",
			"<rootDir>/src/__mocks__/i18n.js",
			"<rootDir>/src/setupTests.js"
		]
	}
}
