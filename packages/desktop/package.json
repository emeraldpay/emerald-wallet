{
	"name": "desktop",
  "productName": "EmeraldWallet",
	"private": false,
	"author": {
		"name": "Igor Artamonov",
		"email": "splix@etcdevteam.com"
	},
	"contributors": [
		"Igor Artamonov <splix@etcdevteam.com>",
		"Elaine Ou <elaine@ethereumclassic.org>",
		"Yuriy Gagarin <gagarin55@protonmail.com>",
		"Isaac Ardis",
		"Shane Jonas <jonas.shane@gmail.com>"
