		"glob": "^7.0.3",
		"identity-obj-proxy": "^3.0.0",
		"imports-loader": "0.7.1",
		"jest": "22.2.1",
		"mini-css-extract-plugin": "^0.5.0",
		"minimist": "^1.2.0",
		"node-abi": "^2.5.1",
		"react-test-renderer": "^15.6.1",
		"recursive-readdir-sync": "^1.0.6",
		"rimraf": "^2.6.3",
		"shebang-loader": "0.0.1",
		"storybook-addon-material-ui": "0.8.2",
