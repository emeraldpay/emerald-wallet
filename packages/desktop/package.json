{
  "name": "@emeraldwallet/desktop",
  "productName": "EmeraldWallet",
  "version": "2.7.0-dev",
  "description": "Emerald - Cryptocurrency Wallet",
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "ethereum",
    "ethereum classic",
    "wallet"
  ],
  "contributors": [
    "Igor Artamonov <splix@emerald.cash>",
    "Elaine Ou <elaine@ethereumclassic.org>",
    "Yuriy Gagarin <gagarin55@protonmail.com>",
    "Isaac Ardis",
    "Shane Jonas <jonas.shane@gmail.com>"
  ],
  "author": {
    "name": "Igor Artamonov",
    "email": "splix@emerald.cash"
  },
  "homepage": "https://emerald.cash",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emeraldpay/emerald-wallet.git"
  },
  "bugs": {
    "url": "https://github.com/emeraldpay/emerald-wallet/issues"
  },
  "main": "app/src/main/index.js",
  "scripts": {
    "build": "yarn clean && yarn compile && webpack",
    "build:dev": "cross-env NODE_ENV=development yarn build",
    "build:dist": "yarn build && electron-builder --publish never",
    "build:watch": "cross-env NODE_ENV=development yarn clean && tsc-watch -b --onSuccess \"yarn build:watch:success\" --onFailure \"yarn build:watch:fail\"",
    "build:watch:fail": "notify -t \"Emerald Wallet\" -m \"Build failed\" -i \"resources/icon.png\"",
    "build:watch:success": "(webpack && notify -t \"Emerald Wallet\" -m \"Build successfully\" -i \"resources/icon.png\") || yarn build:watch:fail",
    "clean": "rimraf app/ dist/ tsconfig.tsbuildinfo",
    "compile": "tsc -b && yarn copyfiles resources/**/* app/",
    "start": "electron .",
    "start:dev": "cross-env NODE_ENV=development yarn start"
  },
  "dependencies": {
    "@emeraldwallet/electron-app": "^2.7.0-dev",
    "core-js": "^3.21.1",
    "node-fetch": "^3.2.3",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "regenerator-runtime": "^0.13.9"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/runtime": "^7.17.2",
    "@kayahr/jest-electron-runner": "^4.4.1",
    "@types/jest": "^27.4.1",
    "@types/node": "16.11.22",
    "@types/semver": "^7.3.9",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.4",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "15.3.5",
    "electron-builder": "^22.14.13",
    "jest": "^27.5.1",
    "node-notifier-cli": "^2.0.0",
    "rimraf": "^3.0.2",
    "source-map-loader": "^3.0.1",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.7",
    "tsc-watch": "^4.6.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "build": {
    "appId": "cash.emerald.desktop-wallet",
    "artifactName": "${productName}-${os}-${arch}-${env.APP_VERSION_GIT_TAG}.${ext}",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      {
        "from": "app",
        "to": "app",
        "filter": [
          "**/*",
          "!**/*.d.ts",
          "!**/*.map",
          "!**/*.tsbuildinfo"
        ]
      },
      "package.json"
    ],
    "asar": true,
    "compression": "normal",
    "dmg": {
      "iconSize": 128,
      "contents": [
        {
          "x": 180,
          "y": 190
        },
        {
          "x": 380,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "category": "Office"
    },
    "mac": {
      "category": "public.app-category.finance"
    },
    "nsis": {
      "oneClick": false
    },
    "protocols": [
      {
        "name": "ethereum",
        "schemes": [
          "ethereum"
        ]
      }
    ],
    "win": {
      "icon": "resources/icon.ico"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "runner": "@kayahr/jest-electron-runner/main",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/app",
      "<rootDir>/node_modules"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
