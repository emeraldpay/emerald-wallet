		"@emeraldplatform/rpc": "0.5.0-beta.1",
		"@emeraldplatform/ui": "0.5.0-beta.1",
		"@emeraldplatform/ui-icons": "0.5.0-beta.1",
		"@emeraldplatform/util": "0.5.0-beta.1",
		"@emeraldplatform/vault": "0.5.0-beta.1",
		"@ledgerhq/hw-app-eth": "4.35.0",
		"@ledgerhq/hw-transport-node-hid": "4.35.0",
		"@material-ui/core": "^3.9.1",
