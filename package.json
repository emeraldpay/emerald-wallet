  "build": {
    "appId": "com.ethereumclassic.emeraldwallet",
    "artifactName": "${productName}-${os}-${arch}-${env.APP_VERSION_GIT_TAG}.${ext}",
    "extraResources": [
      "./emerald",
      "./emerald.exe"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ]
