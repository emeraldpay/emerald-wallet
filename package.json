    "fbjs": "0.8.9",
    "flexboxgrid": "^6.3.0",
    "follow-redirects": "^1.2.3",
    "font-awesome": "4.7.0",
    "i18next": "^8.3.0",
    "i18next-browser-languagedetector": "^1.0.1",
    "i18next-localstorage-cache": "^1.1.1",
    "i18next-resource-store-loader": "^0.1.1",
