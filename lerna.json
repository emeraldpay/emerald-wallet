{
  "packages": [
    "packages/*"
  ],
  "version": "2.5.0-dev",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--ignore-engines"
      ]
    },
    "version": {
      "message": "solution: publish %s",
      "allowBranch": [
        "master",
        "release/*"
      ]
    }
  }
}
